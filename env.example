# Sentindex Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here
EIA_API_KEY=your_eia_api_key_here
SENTIENT_API_KEY=your_sentient_api_key_here

# Security
SECRET_KEY=your_secret_key_here

# Database (if running locally)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sentindex
DATABASE_USER=sentindex
DATABASE_PASSWORD=sentindex_password

# Redis (if running locally)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka (if running locally)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Monitoring
PROMETHEUS_PORT=8001
LOG_LEVEL=INFO
